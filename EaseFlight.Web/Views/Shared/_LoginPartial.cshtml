@Scripts.Render("~/bundles/account")

<div class="modal fade login" id="loginModal">
    <div class="modal-dialog login animated">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Login with</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="redirectUrl" />
                <div class="box">
                    <div class="content">
                        <div class="social">
                            <a id="google_login" class="circle google" onclick="loginGoogle()" title="Login with Google">
                                <i class="fa fa-google-plus fa-fw"></i>
                            </a>
                            <a id="facebook_login" class="circle facebook" onclick="loginFacebook()" title="Login with Facebook">
                                <i class="fa fa-facebook fa-fw"></i>
                            </a>
                        </div>
                        <div class="division">
                            <div class="line l"></div>
                            <span>or</span>
                            <div class="line r"></div>
                        </div>
                        <div class="error"></div>
                        <div class="form loginBox">
                            <form method="post" action="" id="loginForm">
                                <input class="form-control" type="text" placeholder="Username" name="username">
                                <span class="msg-valid msg-login-modal msg-username">Username is required</span>
                                <input class="form-control" type="password" placeholder="Password" name="password">
                                <span class="msg-valid msg-login-modal msg-password">Password is required</span>
                                <input class="btn btn-default btn-login" type="button" value="Login" onclick="login()">
                            </form>
                        </div>
                    </div>
                </div>
                <div class="box">
                    <div class="content registerBox" style="display:none;">
                        <div class="form">
                            <form method="post" data-remote="true" action="" id="registerForm">
                                <input class="form-control" type="text" placeholder="Username" name="username">
                                <span class="msg-valid msg-login-modal msg-username">Username is required</span>

                                <input class="form-control" type="text" placeholder="First Name" name="firstname">
                                <span class="msg-valid msg-login-modal msg-firstname">First Name is required</span>

                                <input class="form-control" type="text" placeholder="Middle and Last Name" name="lastname">
                                <span class="msg-valid msg-login-modal msg-lastname">Last Name is required</span>

                                <input class="form-control" type="text" placeholder="Email" name="email">
                                <span class="msg-valid msg-login-modal msg-email">Email is required</span>

                                <input class="form-control register-password" type="password" placeholder="Password" name="password">
                                <span class="msg-valid msg-login-modal msg-password">Password is required</span>

                                <input class="form-control" type="password" placeholder="Repeat Password" name="repeatpassword">
                                <span class="msg-valid msg-login-modal msg-repeatpassword">Repeat Password is required</span>

                                <input class="btn btn-default btn-register" type="button" value="Create account" onclick="register()">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="forgot login-footer">
                    <span>
                        Looking to
                        <a href="@Url.Action("ForgotPassword","Account")">forgot password</a>
                        ?
                    </span>
                </div>
                <div class="forgot register-footer" style="display:none">
                    <span>Already have an account?</span>
                    <a href="javascript: showLoginForm();">Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
@using EaseFlight.Web.WebUtilities;
@{
    var loggedUser = SessionUtility.GetLoggedUser();
    var shortName = string.Empty;

    //Get short name for logged user fullname
    if (loggedUser != null)
    {
        var fullName = loggedUser.FullName.Split(' ');
        var lenght = fullName.Count();
        shortName = fullName[0];

        if (lenght != 1)
        {
            shortName = string.Format("{0} {1}", fullName[lenght - 2], fullName[lenght - 1]);
        }
    }
}

